<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote  name="spz"
           fetch="https://github.com/spezi77/" />
  <remote  name="ev"
           fetch="git://github.com/Evervolv/" />	 
  <remote  name="cm"
           fetch="git://github.com/CyanogenMod/" />
  <remote  name="android-security"
           fetch="https://github.com/android-security/" />

  <!-- Remove projects -->
  <remove-project name="SlimRoms/android_external_bluetooth_bluedroid" />
  <remove-project name="SlimRoms/android_external_flac" />
  <remove-project name="SlimRoms/android_build" />
  <remove-project name="SlimRoms/frameworks_av" />
  <remove-project name="SlimRoms/frameworks_base" />
  <remove-project name="SlimRoms/frameworks_native" />
  <remove-project name="SlimRoms/frameworks_opt_telephony" />
  <remove-project name="platform/external/tremolo" />
  <remove-project name="SlimRoms/hardware_qcom_gps" />
  <remove-project name="SlimRoms/hardware_ril" />
  <remove-project name="SlimRoms/android_libcore" />
  <remove-project name="SlimRoms/packages_apps_Camera2" />
  <remove-project name="SlimRoms/packages_apps_Settings" />
  <remove-project name="SlimRoms/packages_apps_Bluetooth" />
  <remove-project name="SlimRoms/android_system_core" />
  <remove-project name="platform/system/security" />
  <remove-project name="SlimRoms/vendor_slim" />
  <remove-project name="SlimRoms/android_external_chromium_org_third_party_openssl" />
  <remove-project name="SlimRoms/android_external_openssl" />
  <remove-project name="SlimRoms/android_external_busybox" />
  <remove-project name="platform/external/bouncycastle" />
  <remove-project name="platform/external/libvpx" />
  <remove-project name="platform/external/sonivox" />
  <remove-project name="platform/external/sqlite" />

  <!-- Security updates -->
  <project path="external/bouncycastle" name="android_external_bouncycastle" remote="android-security" revision="aosp-4.4" />
  <project path="external/libvpx" name="android_external_libvpx" remote="android-security" revision="aosp-4.4" groups="pdk" />
  <project path="external/sonivox" name="android_external_sonivox" remote="android-security" revision="aosp-4.4" groups="pdk" />
  <project path="external/sqlite" name="android_external_sqlite" remote="android-security" revision="aosp-4.4" groups="pdk" />
  <project path="external/tremolo" name="android_external_tremolo" remote="android-security" revision="aosp-4.4" groups="pdk" />
  <project path="system/security" name="android_system_security" remote="android-security" revision="aosp-4.4" groups="pdk" />
  <project path="external/openssl" name="android_external_openssl" remote="cm" revision="cm-11.0" groups="pdk" />
  <project path="external/chromium_org/third_party/openssl" name="android_external_chromium_org_third_party_openssl" remote="cm" revision="cm-11.0" />
  <project path="packages/apps/Bluetooth" name="android_packages_apps_Bluetooth" remote="spz" revision="kk4.4-caf" />

  <!-- Forked Slimkat projects with required changes for htc bravo -->
  <project path="build" name="android_build" remote="spz" revision="slimkat-new" >
    <copyfile src="core/root.mk" dest="Makefile" />
  </project>
  <project path="frameworks/base" name="android_frameworks_base" remote="spz" revision="slimkat-new" />
  <project path="frameworks/native" name="android_frameworks_native" remote="spz" revision="slimkat-new" />
  <project path="frameworks/opt/telephony" name="android_frameworks_opt_telephony" remote="spz" revision="slimkat-new" />
  <project path="hardware/ril" name="android_hardware_ril" remote="spz" revision="slimkat-new" />
  <project path="vendor/slim" name="vendor_slim" remote="spz" revision="slimkat-new" />

  <!-- Settings with option for Lockscreen Notifications -->
  <project path="packages/apps/Settings" name="packages_apps_Settings" remote="spz" revision="slimkat-new" />

  <!-- Switch to newer busybox version -->
  <project path="external/busybox" name="android_external_busybox" remote="spz" revision="slimkat-new" />

  <!-- Kernel and device-trees for htc bravo (Thanks Evervolv) -->
  <project path="kernel/htc/qsd8k" name="android_kernel_htc_qsd8k" remote="spz" revision="kitkat-ls" /> 
  <project path="device/htc/bravo" name="android_device_htc_bravo" remote="spz" revision="slimkat-new" />
  <project path="device/htc/qsd8k-common" name="android_device_htc_qsd8k-common" remote="spz" revision="slimkat-new" />
  <project path="vendor/htc" name="android_vendor_htc" remote="spz" revision="kitkat" />

  <!-- Required for enabling A2SD scripts -->
  <project path="external/bash" name="android_external_bash" remote="cm" revision="cm-11.0" />
  <project path="external/libncurses" name="android_external_libncurses" remote="cm" revision="cm-11.0" />

  <!-- Required hardware and camera legacy projects from Evervolv  -->
  <project path="hardware/qcom/audio-legacy" name="android_hardware_qcom_audio-legacy" remote="ev" revision="kitkat" />
  <project path="hardware/qcom/display-legacy" name="android_hardware_qcom_display-legacy" remote="ev" revision="kitkat" />
  <project path="hardware/qcom/gps-legacy" name="android_hardware_qcom_gps-legacy" remote="ev" revision="kitkat" />
  <project path="packages/apps/Camera2" name="android_packages_apps_Camera2" remote="ev" revision="kitkat" />

  <!-- Security patches by Google / Stagefright 2.0 patches -->
  <project path="external/bluetooth/bluedroid" name="android_external_bluetooth_bluedroid" remote="spz" revision="slimkat-new" />
  <project path="external/flac" name="android_external_flac" remote="spz" revision="cm-11.0" />
  <project path="frameworks/av" name="android_frameworks_av" remote="spz" revision="slimkat-new" />
  <project path="libcore" name="android_libcore" remote="spz" revision="slimkat-new" />
  <project path="system/core" name="android_system_core" remote="spz" revision="slimkat-new" />

</manifest>
