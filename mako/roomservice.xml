<?xml version="1.0" encoding="UTF-8"?>
<manifest>

<!-- remove CM repos -->
  <remove-project name="CyanogenMod/android_build" />
  <remove-project name="CyanogenMod/android_frameworks_base" />
  <remove-project name="CyanogenMod/android_packages_apps_CMUpdater" />
  <remove-project name="CyanogenMod/android_vendor_cm" />
  <remove-project name="CyanogenMod/android_system_core" />

<!-- MAKO device repos -->

  <!-- Use my N4 kernel (close to stock google) -->
  <project path="kernel/google/msm" name="spezi77/android_kernel_google_msm" revision="android-msm-mako-3.4-kitkat-mr2" />

  <!-- Kitkat vendor blobs and device tree-->
  <project path="vendor/lge" name="spezi77/android_vendor_lge" revision="kk-4.4.4" /> 
  <project path="device/lge/mako" name="spezi77/android_device_lge_mako" revision="cm-11.0" />

<!-- Forked CM projects -->
  <project path="build" name="spezi77/android_build" groups="pdk" revision="cm-11.0-mako" >
    <copyfile src="core/root.mk" dest="Makefile" />
  </project>
  <project path="frameworks/base" name="spezi77/android_frameworks_base" revision="cm-11.0-mako" />
  <project path="vendor/cm" name="spezi77/android_vendor_cm" revision="cm-11.0-mako" >
    <copyfile src="bootimage/Android.mk" dest="kernel/Android.mk" />
  </project>
  <project path="system/core" name="spezi77/android_system_core" revision="cm-11.0-mako" />

  <!-- Use Google GCC 4.8 as kernel target toolchain -->
  <project path="prebuilts/gcc/linux-x86/arm/arm-eabi-4.8" name="platform/prebuilts/gcc/linux-x86/arm/arm-eabi-4.8" remote="aosp" revision="master" />

</manifest>
